{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",

		"rootDir": "./src",
		"outDir": "./dist",

		"lib": ["ES2022"],

		"esModuleInterop": true,
		"resolveJsonModule": true,

		"strict": false,
		"noImplicitAny": false,

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"types": ["node"],
		"sourceMap": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
